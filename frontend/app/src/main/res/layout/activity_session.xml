<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionActivity">

    <TextView
        android:id="@+id/select_session_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_type_text"
        app:layout_constraintBottom_toTopOf="@+id/movie_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_recycler_view" />

    <Button
        android:id="@+id/food_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_session_text"
        app:layout_constraintBottom_toBottomOf="@+id/movie_button"
        app:layout_constraintEnd_toStartOf="@+id/movie_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movie_button" />

    <Button
        android:id="@+id/movie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_session_text"
        app:layout_constraintBottom_toTopOf="@+id/start_swiping_button"
        app:layout_constraintEnd_toStartOf="@+id/sport_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/food_button"
        app:layout_constraintTop_toBottomOf="@+id/select_session_type_text" />

    <Button
        android:id="@+id/sport_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sports_session_text"
        app:layout_constraintBottom_toBottomOf="@+id/movie_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/movie_button"
        app:layout_constraintTop_toTopOf="@+id/movie_button" />

    <Button
        android:id="@+id/start_swiping_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_swiping_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_button" />

    <TextView
        android:id="@+id/session_key_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/user_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_recycler_view"
        android:layout_width="225dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/select_session_type_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/session_key_text" />

</androidx.constraintlayout.widget.ConstraintLayout>